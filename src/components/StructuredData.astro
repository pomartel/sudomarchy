---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Pierre Olivier Martel",
      url: "https://sudomarchy.com/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Pierre Olivier Martel",
      logo: {
        "@type": "ImageObject",
        url: "https://sudomarchy.com/avatar.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://sudomarchy.com/avatar.jpg",
    articleSection: "Technology",
    keywords: "",
    wordCount: data.wordCount,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Pierre Olivier Martel",
    url: "https://sudomarchy.com",
    image: "https://sudomarchy.com/avatar.jpg",
    sameAs: [
      "https://github.com/pomartel",
      "https://x.com/sudomarchy",
      "https://bsky.app/profile/sudomarchy.com",
    ],
    jobTitle: "Software Engineer",
    description: "My Omarchy & Hyprland tweaks",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "sudomarchy",
    url: "https://sudomarchy.com",
    description: "My Omarchy & Hyprland tweaks",
    author: {
      "@type": "Person",
      name: "Pierre Olivier Martel",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://sudomarchy.com/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />