---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Peter Steinberger",
      url: "https://my.omarchy.blog/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Peter Steinberger",
      logo: {
        "@type": "ImageObject",
        url: "https://my.omarchy.blog/avatar.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://my.omarchy.blog/avatar.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Peter Steinberger",
    url: "https://my.omarchy.blog",
    image: "https://my.omarchy.blog/avatar.jpg",
    sameAs: [
      "https://github.com/pomartel",
      "https://twitter.com/steipete",
      "https://bsky.app/profile/my.omarchy.blog",
    ],
    jobTitle: "Software Engineer",
    description:
      "AI-powered tools from Swift roots to web frontiers. Every commit lands on GitHub for you to fork & remix.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Peter Steinberger",
    url: "https://my.omarchy.blog",
    description:
      "AI-powered tools from Swift roots to web frontiers. Every commit lands on GitHub for you to fork & remix.",
    author: {
      "@type": "Person",
      name: "Peter Steinberger",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://my.omarchy.blog/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />