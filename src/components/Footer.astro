---
import Socials from "./Socials.astro";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <div class="max-w-3xl mx-auto px-0">
    <hr class="border-border" aria-hidden="true" />
  </div>
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <a href="https://github.com/pomartel/sudomarchy" target="_blank" rel="noopener noreferrer" class="hover:text-accent">
        Steal this post ➜ CC BY 4.0 · Code MIT
      </a>
    </div>
  </div>
</footer>
